<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>europeana-uim</artifactId>
		<groupId>eu.europeana</groupId>
		<version>1.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>europeana-uim-logging-database</artifactId>
	<name>Unified Ingestion Manager: API Database Only Storage</name>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>
							!eu.europeana.uim.logging.database.*,
							*
                        </Import-Package>
						<Export-Package>
							eu.europeana.uim.logging.database.*,
                        </Export-Package>
						<Embed-Dependency>
							*;scope=compile|runtime;inline=false;
                        </Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.theeuropeanlibrary</groupId>
									<artifactId>tel-database-ftl</artifactId>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${basedir}/target/template</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>hibernate3-maven-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>hbm2dao</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<components>
						<component>
							<name>hbm2dao</name>
							<implementation>annotationconfiguration</implementation>
							<outputDirectory>
								target/dao
							</outputDirectory>
						</component>
					</components>
					<componentProperties>
						<template>daohome.ftl</template>
						<templatepath>${basedir}/target/template</templatepath>
						<configurationfile>src/main/code/hibernate.cfg.xml</configurationfile>
						<ejb3>false</ejb3>
						<jdk5>true</jdk5>

						<drop>true</drop>
						<format>true</format>
						<export>false</export>
						<outputfilename>schema.sql</outputfilename>
					</componentProperties>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy
									file="target/dao/eu/europeana/uim/logging/database/DatabaseLogEntryHome.java"
									tofile="src/main/java/eu/europeana/uim/logging/database/DatabaseLogEntryHome.java" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

