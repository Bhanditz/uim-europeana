<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <cm:property-placeholder persistent-id="eu.europeana.uim">
        <cm:default-properties>
            <cm:property name="mongoLoggingTypeSerializer" value="eu.europeana.uim.logging.mongo.DefaultTypeSerializer"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bp:reference id="registry" interface="eu.europeana.uim.api.Registry"/>

    <service interface="eu.europeana.uim.api.LoggingEngine" ranking="9">
        <bean class="eu.europeana.uim.logging.mongo.MongoLoggingEngine">
            <property name="typeSerializer" value="${mongoLoggingTypeSerializer}" />
        </bean>
    </service>
</blueprint>
