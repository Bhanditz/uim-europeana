<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0">


   <bean id="sugarcrmPlugin" class="eu.europeana.uim.sugarcrmclient.plugin.SugarCRMAgentImpl">    
       <property name="sugarwsClient" ref="sugarWsClient"/>  
   </bean>

   <service id="sugarcrmPluginService" ref="sugarcrmPlugin" interface="eu.europeana.uim.sugarcrmclient.plugin.SugarCRMAgent"/>


   <shell:command-bundle>
        <shell:command name="uim/sugarCrmAgent">
            <shell:action class="eu.europeana.uim.sugarcrmclient.plugin.command.UIM2SugarCrm">
                <shell:argument ref="sugarcrmPlugin"/>
            </shell:action>
        </shell:command>
    </shell:command-bundle>
    
       
    <!--  
    -->

</blueprint>
