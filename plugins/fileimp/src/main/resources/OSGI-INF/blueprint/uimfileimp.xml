<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
		   xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0">
		   
    <bp:reference id="registry" interface="eu.europeana.uim.api.Registry" />

	<shell:command-bundle>
		<shell:command name="uim/file">
			<shell:action class="eu.europeana.uim.file.command.UIMFile">
				<shell:argument ref="registry" />
			</shell:action>
		</shell:command>
	</shell:command-bundle>
</blueprint>
