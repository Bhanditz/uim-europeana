<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0">

    <bp:reference id="registry" interface="eu.europeana.uim.api.Registry"/>

    <bean id="workflowProcessorProvider" class="eu.europeana.uim.workflow.UIMWorkflowProcessorProvider" scope="singleton">
        <argument>
            <bean class="eu.europeana.uim.workflow.UIMStepProcessorProvider" />
        </argument>
    </bean>

    <bean id="uimOrchestrator" class="eu.europeana.uim.orchestration.UIMOrchestrator" scope="singleton">
        <argument ref="registry"/>
        <argument ref="workflowProcessorProvider" />
    </bean>

    <bp:service id="orchestrator" ref="uimOrchestrator" interface="eu.europeana.uim.api.Orchestrator" />


</blueprint>
