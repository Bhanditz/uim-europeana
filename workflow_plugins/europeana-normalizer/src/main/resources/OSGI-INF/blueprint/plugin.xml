<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bp="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:shell="http://karaf.apache.org/xmlns/shell/v1.0.0">

    <bean id="normalizer" class="eu.europeana.normalizer.plugin.EuropeanaNormalizerImpl"/>

    <service id="normalizerService" ref="normalizer" interface="eu.europeana.normalizer.plugin.EuropeanaNormalizer"/>

    <shell:command-bundle>
        <shell:command name="test/normalizer">
            <shell:action class="eu.europeana.normalizer.command.NormalizerConsole">
                <shell:argument ref="normalizer"/>
            </shell:action>
        </shell:command>
    </shell:command-bundle>

</blueprint>
